<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_margin="5dp"
    android:orientation="horizontal">


    <com.ffcs.z.meetsigndemo.wight.CircleImageView
        android:id="@+id/item_sign_avatar_pick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_avarter_blue"
        app:civ_BorderColor="@android:color/white"
        app:civ_BorderOverlay="true"
        app:civ_FillColor="@android:color/white"/>



    <TextView
        android:id="@+id/item_sign_name"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_sign_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp" />

</LinearLayout>
